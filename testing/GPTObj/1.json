{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "MyHostedZone": {
            "Type": "AWS::Route53::HostedZone",
            "Properties": {
                "Name": "example.com"
            }
        },
        "MyApiGateway": {
            "Type": "AWS::ApiGateway::RestApi",
            "Properties": {
                "Name": "IngestionApi"
            }
        },
        "MyAuthorizerLambda": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Code": {
                    "ZipFile": "exports.handler = async (event) => {\n  return 'ok';\n};\n"
                },
                "Handler": "index.handler",
                "Runtime": "nodejs14.x",
                "Role": "arn:aws:iam::123456789012:role/lambda-exec"
            }
        },
        "MyDynamoDBTable": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "Id",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "Id",
                        "KeyType": "HASH"
                    }
                ],
                "BillingMode": "PAY_PER_REQUEST"
            }
        },
        "MyIngestionLambda": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Code": {
                    "ZipFile": "exports.handler = async (event) => {\n  return 'ok';\n};\n"
                },
                "Handler": "index.handler",
                "Runtime": "nodejs14.x",
                "Role": "arn:aws:iam::123456789012:role/lambda-exec"
            }
        },
        "MySNSTopic": {
            "Type": "AWS::SNS::Topic",
            "Properties": {
                "TopicName": "MyTopic"
            }
        },
        "MyS3Bucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": "my-ingestion-bucket"
            }
        }
    }
}