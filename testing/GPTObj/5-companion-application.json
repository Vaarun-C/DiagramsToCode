{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "MyIoTThing": {
            "Type": "AWS::IoT::Thing",
            "Properties": {
                "ThingName": "MyIoTThing"
            }
        },
        "MyIAMRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "lambda.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Path": "/"
            }
        },
        "MyAmplifyApp": {
            "Type": "AWS::Amplify::App",
            "Properties": {
                "Name": "MyAmplifyApp",
                "Repository": "https://github.com/myrepo/myapp"
            }
        },
        "MyCloudFrontDistribution": {
            "Type": "AWS::CloudFront::Distribution",
            "Properties": {
                "DistributionConfig": {
                    "Enabled": true,
                    "Origins": [
                        {
                            "Id": "Origin1",
                            "DomainName": "example.com"
                        }
                    ]
                }
            }
        },
        "MyS3Bucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": "my-dashboard-assets"
            }
        },
        "MyAppSyncApi": {
            "Type": "AWS::AppSync::GraphQLApi",
            "Properties": {
                "Name": "MyGraphQLApi",
                "AuthenticationType": "API_KEY"
            }
        },
        "MyDynamoDBTable": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "Id",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "Id",
                        "KeyType": "HASH"
                    }
                ],
                "BillingMode": "PAY_PER_REQUEST"
            }
        },
        "MySQSQueue": {
            "Type": "AWS::SQS::Queue",
            "Properties": {
                "QueueName": "MyQueue.fifo",
                "FifoQueue": true
            }
        },
        "MyLambdaFunction": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Code": {
                    "ZipFile": "exports.handler = async () => {\n  return 'OK';\n};\n"
                },
                "Handler": "index.handler",
                "Runtime": "nodejs14.x",
                "Role": {
                    "Fn::GetAtt": [
                        "MyIAMRole",
                        "Arn"
                    ]
                }
            }
        },
        "MySNSTopic": {
            "Type": "AWS::SNS::Topic",
            "Properties": {
                "TopicName": "MyTopic"
            }
        }
    }
}