{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Basic CloudFormation template for AWS IoT 1-Click.",
  "Resources": {
    "MyIoT1ClickProject": {
      "Type": "AWS::IoT1Click::Project",
      "Properties": {
        "ProjectName": "MyIoT1ClickProject",  // Replace with your desired project name
        "Description": "Sample IoT 1-Click project"
      }
    },
    "MyDevice": {
      "Type": "AWS::IoT1Click::Device",
      "Properties": {
        "DeviceId": "MyIoTDevice",  // Replace with your desired device ID
        "ProjectId": {
          "Ref": "MyIoT1ClickProject"
        },
        "DeviceType": "button"  // Example device type, adjust as needed
      }
    },
    "MyFunction": {
      "Type": "AWS::IoT1Click::Function",
      "Properties": {
        "FunctionName": "MyIoTFunction",  // Replace with your desired function name
        "FunctionDescription": "Sample function triggered by IoT device",
        "FunctionCode": "def lambda_handler(event, context):\n    return { 'statusCode': 200, 'body': 'Function executed successfully!' }",
        "FunctionRole": {
          "Fn::GetAtt": [
            "FunctionExecutionRole",
            "Arn"
          ]
        }
      }
    },
    "FunctionExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "LambdaBasicExecution",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    }
  }
}
