{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Simple Amazon Chime SDK Configuration",
  "Resources": {
    "VoiceConnector": {
      "Type": "AWS::Chime::VoiceConnector",
      "Properties": {
        "Name": "MyVoiceConnector",
        "AwsRegion": { "Ref": "AWS::Region" },
        "RequireEncryption": true
    },
    "Meeting": {
      "Type": "AWS::Chime::Meeting",
      "Properties": {
        "ClientRequestToken": { "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${AWS::AccountId}-${AWS::Timestamp}" },
        "MediaRegion": { "Ref": "AWS::Region" },
      }
    }
  }
}
