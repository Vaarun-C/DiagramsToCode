{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Basic CloudFormation template for AWS Cost and Usage Reports.",
  "Resources": {
    "CostAndUsageReport": {
      "Type": "AWS::Cur::ReportDefinition",
      "Properties": {
        "ReportName": "MonthlyCostReport",
        "TimeUnit": "DAILY",  // Options: DAILY, HOURLY, MONTHLY
        "Format": "textORcsv",  // Options: textORcsv, Parquet
        "Compression": "GZIP",  // Options: GZIP, ZIP
        "S3Bucket": "YOUR_BUCKET_NAME",  // Replace with your S3 bucket name
        "S3Prefix": "cost-reports/",  // Prefix for the report files in S3
        "S3Region": "YOUR_REGION",  // Replace with your S3 bucket's region
        "AdditionalArtifacts": [
          "REDSHIFT",  // Optional: Use if you want to also send reports to Amazon Redshift
          "QUICKSIGHT"  // Optional: Use if you want to integrate with Amazon QuickSight
        ],
        "ReportVersioning": "CREATE_NEW_REPORT"  // Options: CREATE_NEW_REPORT, OVERWRITE_REPORT
      }
    }
  },
  "Outputs": {
    "ReportDefinitionArn": {
      "Description": "ARN of the created Cost and Usage Report.",
      "Value": {
        "Fn::GetAtt": ["CostAndUsageReport", "ReportDefinitionArn"]
      }
    }
  }
}
