{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Basic AWS Elemental MediaLive Setup",
  "Resources": {
    "LiveInput": {
      "Type": "AWS::MediaLive::Input",
      "Properties": {
        "Name": "MyLiveInput",  // Replace with your desired input name
        "Type": "RTMP_PULL",
        "InputSecurityGroupId": { "Ref": "LiveInputSecurityGroup" }  // Define security group resource below
      }
    },
    "LiveInputSecurityGroup": {
      "Type": "AWS::MediaLive::InputSecurityGroup",
      "Properties": {
        "WhitelistRules": [
          {
            "Cidr": "0.0.0.0/0"  // Adjust for your security needs
          }
        ]
      }
    },
    "LiveChannel": {
      "Type": "AWS::MediaLive::Channel",
      "Properties": {
        "Name": "MyLiveChannel",  // Replace with your desired channel name
        "RoleArn": { "Fn::GetAtt": ["MediaLiveRole", "Arn"] },  // Define IAM Role below
        "InputAttachments": [
          {
            "InputId": { "Ref": "LiveInput" }
          }
        ],
        "EncoderSettings": {
          "OutputGroups": [
            {
              "Name": "Apple HLS",
              "OutputGroupSettings": {
                "Type": "HLS_GROUP_SETTINGS",
                "HlsGroupSettings": {
                  "Destination": "s3://my-output-bucket"  // Replace with your output bucket
                }
              },
              "Outputs": [
                {
                  "NameModifier": "_1",
                  "VideoSettings": {},
                  "AudioSettings": {},
                  "ContainerSettings": {
                    "Container": "M3U8"
                  }
                }
              ]
            }
          ]
        }
      }
    },
    "MediaLiveRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "MediaLiveRole",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "medialive.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "MediaLivePolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:PutObject",
                    "s3:PutObjectAcl"
                  ],
                  "Resource": "arn:aws:s3:::my-output-bucket/*"  // Replace with your output bucket ARN
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "LiveChannelId": {
      "Description": "ID of the MediaLive Channel",
      "Value": { "Ref": "LiveChannel" }
    },
    "LiveInputId": {
      "Description": "ID of the MediaLive Input",
      "Value": { "Ref": "LiveInput" }
    }
  }
}
