{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Basic CloudFormation template for AWS Mainframe Modernization.",
  "Resources": {
    "MainframeModernizationApplication": {
      "Type": "AWS::MainframeModernization::Application",
      "Properties": {
        "Name": "MyMainframeApp",
        "RuntimeEnvironment": "ZLINUX",  // Change based on your application needs
        "SourceCode": {
          "S3Bucket": "your-s3-bucket",  // Replace with your S3 bucket
          "S3Key": "path/to/source.zip"   // Replace with the path to your source code
        },
        "ApplicationConfiguration": {
          "SourceCodeRepository": {
            "CodeRepository": {
              "RepositoryType": "S3",
              "S3Bucket": "your-s3-bucket",
              "S3Key": "path/to/repo.zip"  // Replace with the path to your code repository
            }
          }
        }
      }
    },
    "MainframeModernizationEnvironment": {
      "Type": "AWS::MainframeModernization::Environment",
      "Properties": {
        "Name": "MyMainframeEnv",
        "Description": "Environment for mainframe modernization.",
        "Type": "AWS",
        "Application": {
          "Ref": "MainframeModernizationApplication"
        },
        "ComputeResources": [
          {
            "Type": "EC2",
            "InstanceType": "t3.medium",  // Choose appropriate instance type
            "MinCount": 1,
            "MaxCount": 2,
            "SubnetIds": [
              {
                "Ref": "MySubnet"  // Replace with your actual subnet IDs
              }
            ]
          }
        ]
      }
    }
  },
  "Outputs": {
    "ApplicationId": {
      "Description": "The ID of the created mainframe modernization application.",
      "Value": {
        "Ref": "MainframeModernizationApplication"
      }
    },
    "EnvironmentId": {
      "Description": "The ID of the created environment for the application.",
      "Value": {
        "Ref": "MainframeModernizationEnvironment"
      }
    }
  }
}
