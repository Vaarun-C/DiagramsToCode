{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Simple Apache MXNet on AWS Setup",
  "Resources": {
    "MXNetTrainingJob": {
      "Type": "AWS::SageMaker::TrainingJob",
      "Properties": {
        "TrainingJobName": "MyMXNetTrainingJob",
       */ "AlgorithmSpecification": {
          "TrainingImage": "811284229777.dkr.ecr.us-west-2.amazonaws.com/mxnet-training:1.8.0-cpu-py3",  // Replace with the appropriate image URI
          "TrainingInputMode": "File"
        },
        "RoleArn": "arn:aws:iam::your-account-id:role/SageMakerRole",  // Replace with your IAM role ARN
        "InputDataConfig": [
          {
            "ChannelName": "training",
            "DataSource": {
              "S3DataSource": {
                "S3DataType": "S3Prefix",
                "S3Uri": "s3://your-bucket/training-data/",  // Replace with your S3 bucket URI
                "S3DataDistributionType": "FullyReplicated"
              }
            }
          }
        ],
        "OutputDataConfig": {
          "S3OutputPath": "s3://your-bucket/output/"  // Replace with your S3 output bucket URI
        },
        "ResourceConfig": {
          "InstanceType": "ml.m5.large",  // Choose your instance type
          "InstanceCount": 1,
          "VolumeSizeInGB": 10
        },
        "StoppingCondition": {
          "MaxRuntimeInSeconds": 3600  // Set maximum runtime for the job 
        } /*
      } 
    }
  }
}
