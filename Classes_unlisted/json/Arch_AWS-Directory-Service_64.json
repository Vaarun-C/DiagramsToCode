{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Basic CloudFormation template for AWS Directory Service.",
  "Resources": {
    "MySimpleAD": {
      "Type": "AWS::DirectoryService::MicrosoftAD",
      "Properties": {
        "Name": "example.com",  // Replace with your desired domain name
        "Password": "YourStrongPassword!",  // Replace with a secure password
        "Size": "Small"  // Options: Small, Large
      }
    }
  }
}
