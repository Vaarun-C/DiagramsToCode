{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Basic CloudFormation template for AWS Secrets Manager.",
  "Resources": {
    "MySecret": {
      "Type": "AWS::SecretsManager::Secret",
      "Properties": {
        "Name": "MySecret",
        "Description": "A secret for storing sensitive information.",
        "SecretString": "{\"username\":\"myUsername\",\"password\":\"myPassword\"}",  // Use a secure method for sensitive data
        "KmsKeyId": "alias/aws/secretsmanager"  // Optional: specify a KMS key for encryption
      }
    }
  },
  "Outputs": {
    "SecretArn": {
      "Description": "ARN of the created secret.",
      "Value": {
        "Ref": "MySecret"
      }
    },
    "SecretName": {
      "Description": "Name of the created secret.",
      "Value": {
        "Fn::GetAtt": ["MySecret", "Name"]
      }
    }
  }
}
