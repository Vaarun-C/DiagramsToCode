{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Basic Amazon Redshift Setup",
  "Resources": {
    "RedshiftCluster": {
      "Type": "AWS::Redshift::Cluster",
      "Properties": {
        "ClusterIdentifier": "my-redshift-cluster",  // Replace with your desired cluster identifier
        "NodeType": "dc2.large",  // Specify the node type (e.g., dc2.large)
        "MasterUsername": "masteruser",  // Replace with your master username
        "MasterUserPassword": "Password123!",  // Replace with your master user password
        "DBName": "mydatabase",  // Replace with your desired database name
        "ClusterType": "single-node",  // Options: single-node, multi-node
      }
    },
    "RedshiftSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Allow Redshift access" 
      }
    }
  },
  "Outputs": {
    "ClusterEndpoint": {
      "Description": "Endpoint of the Redshift Cluster",
      "Value": { "Fn::GetAtt": ["RedshiftCluster", "Endpoint.Address"] }
    },
    "ClusterArn": {
      "Description": "ARN of the Redshift Cluster",
      "Value": { "Fn::GetAtt": ["RedshiftCluster", "Arn"] }
    }
  }
}
